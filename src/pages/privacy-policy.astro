---
import Base from "@/layouts/Base.astro";
import * as privacyPolicy from "src/content/pages/privacy-policy.md";
---

<style>
    h4 {
        text-align: center;
    }
</style>

<Base title="Privacy Policy">
  <section class="section-sm">
    <div class="container">
      <div class="row justify-center">
        <div class="sm:col-10 md:col-8 lg:col-10">
          <h1 class="h2 mb-8 text-center">Privacy Policy</h1>
          <div class="content">
            <Fragment set:html={privacyPolicy.compiledContent()}/>
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>
